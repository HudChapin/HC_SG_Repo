@model Exercises.Models.ViewModels.StudentVM

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Edit Student</h3>
        @Html.ActionLink("Return to List", "List", "Student")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            @Html.HiddenFor(s => s.Student.StudentId)
        <div class="form-group">
            <div class="form-group">
                <label>First Name:</label>
                @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control"})
                @Html.ValidationMessageFor(m => m.Student.FirstName)
            </div>
            <div class="form-group">
                <label>Last Name:</label>
                @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control"})
                @Html.ValidationMessageFor(m => m.Student.LastName)
            </div>
            <div class="form-group">
                <label>Major:</label>
                @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new { @class = "form-control", required = true})
            </div>
            <div class="form-group">
                <label>GPA:</label>
                @Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-control"})
                @Html.ValidationMessageFor(m => m.Student.GPA)
            </div>
            <h4>Courses</h4>
            <div class="form-group">
                @Html.ListBoxFor(m => m.SelectedCourseIds, Model.CourseItems, new { @class = "form-control", required = true})
            </div>
            <div class="form-group">
                <label>Street Address 1:</label>
                @Html.TextBoxFor(m => m.Student.Address.Street1, new { @class = "form-control"})
                @Html.ValidationMessageFor(m => m.Student.Address.Street1)
            </div>
            <div class="form-group">
                <label>Street Address 2</label>
                @Html.TextBoxFor(m => m.Student.Address.Street2, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Student.Address.Street2)
            </div>
            <div class="form-group">
                <label>City</label>
                @Html.TextBoxFor(m => m.Student.Address.City, new { @class = "form-control"})
                @Html.ValidationMessageFor(m => m.Student.Address.City)
            </div>
            <div class="form-group">
                <label>State</label>
                @Html.DropDownListFor(m => m.Student.Address.State.StateAbbreviation, Model.StateItems, new { @class = "form-control"})
            </div>
            <div class="form-group">
                <label>Postal Code</label>
                @Html.TextBoxFor(m => m.Student.Address.PostalCode, new { @class = "form-control"})
                @Html.ValidationMessageFor(m => m.Student.Address.PostalCode)
            </div>
            <button class="btn btn-primary">Save</button>
        </div>
        }
    </div>
</div> 